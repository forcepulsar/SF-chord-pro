<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Song Chord Editor</masterLabel>
    <description>Edit chord sheets for songs</description>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>song__c</object>
            </objects>
            <property name="theme" type="String" default="light" label="Editor Theme" 
                     description="Choose between 'light' and 'dark' themes"/>
            <property name="recordId" type="String" label="Record ID" 
                     description="ID of the record to load/save content"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>